{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "tuya-panel-utils": ["../tuya-panel-utils/lib"],
      "tuya-panel-theme": ["../tuya-panel-theme/lib"],
      "tuya-panel-icon-background": ["../tuya-panel-icon-background/lib"],
      "tuya-panel-style-slider-card": ["../tuya-panel-style-slider-card/lib"]
    },
    "allowJs": true,
    "declaration": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true, // 与 allowjs冲突
    "outDir": "./lib",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    // "allowUnreachableCode": true,
    "lib": ["dom", "es5", "es6", "es2015", "es2016", "es2017", "es2018", "esnext"],
    "typeRoots": ["./@types/"]
  },
  "include": ["./src/"],
  "exclude": ["./node_modules"]
}
